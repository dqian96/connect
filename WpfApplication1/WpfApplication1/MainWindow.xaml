<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        >
    <Grid
        DataContext="{Binding ViewModel, Source={StaticResource translatedText}}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" 
                   Text="{Binding TranslatedText}" VerticalAlignment="Top" Height="301" Width="498"/>
        <Viewbox>
            <Grid Width="512" Height="424">
                <Image x:Name="camera" />
                <Canvas x:Name="canvas" />
            </Grid>
        </Viewbox>
    </Grid>
</Window>
